<div class="send-message p-3">
    <div class="chat-actions-container">
        <div class="emoji-picker-container">
            <div class="emoji-picker"></div>
        </div>
    </div>
    <div class="align-items-center d-flex">
        <div class="chat-actions d-flex">
            <i class="fas fa-paperclip me-3 d-none"></i>
            <i class="fas fa-smile-beam" id="emojiPicker"></i>
        </div>
        <div class="px-3 w-100 position-relative">
            <textarea class="form-control" rows="1" id="message" placeholder="Type message..."></textarea>
            <span class="message-remaining"></span>
        </div>
        <button class="button-tertiary btn send-message-button">
            <i class="fas fa-paper-plane"></i>
        </button>
    </div>
</div>